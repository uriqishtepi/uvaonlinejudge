task=${1}
make ${task}
if [ $? -ne 0 ] ; then 
    exit;
fi

IN=${task}.in

if [ ! -f $IN ] ; then 
    exit; 
fi

OUT=/tmp/myout.txt

if [ -f $OUT ] ; then rm /tmp/myout.txt; fi

echo "running ${task} < $IN"
./${task} < $IN > $OUT && diff -q ${task}.out $OUT || echo run " vimdiff $OUT ${task}.out" to see diff

if [ `wc -l $OUT | awk '{print $1}' ` -gt 32 ] ; then
    less $OUT;
else
    cat $OUT;
fi

